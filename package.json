{
	"name": "@idleberg/cosby",
	"description": "Delightful esbuild configurations",
	"version": "0.2.5",
	"license": "MIT",
	"author": "Jan T. Sott",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/node-cosby.git"
	},
	"keywords": [
		"esbuild",
		"esbuild config",
		"configuration"
	],
	"type": "module",
	"bin": {
		"cosby": "./lib/cli.mjs"
	},
	"exports": {
		".": {
			"types": {
				"import": "./lib/index.d.mts",
				"require": "./lib/index.d.cts"
			},
			"import": "./lib/index.mjs",
			"require": "./lib/index.cjs"
		}
	},
	"engines": {
		"node": ">=20"
	},
	"files": [
		"lib/",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"lint": "concurrently --prefix-colors blue,green,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:e18e": "e18e-cli analyze",
		"prepack": "npm run build",
		"publish:jsr": "deno publish",
		"publish:npm": "np",
		"test": "vitest run"
	},
	"dependencies": {
		"c12": "4.0.0-beta.2",
		"commander": "^14.0.3",
		"consola": "^3.4.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.4.1",
		"@commitlint/config-conventional": "^20.4.1",
		"@idleberg/configs": "^0.4.2",
		"@types/node": "^24.10.1",
		"@vitest/coverage-v8": "^4.0.18",
		"concurrently": "^9.2.1",
		"np": "^11.0.2",
		"tsdown": "^0.20.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"peerDependencies": {
		"esbuild": "^0.25.11"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"lefthook"
		]
	},
	"packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd"
}
